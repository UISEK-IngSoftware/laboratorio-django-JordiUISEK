								"key": "Content-Type",
								"value": "application/x-www-form-urlencoded"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "grant_type",
									"value": "password",
									"description": "Tipo de concesión OAuth2"
								},
								{
									"key": "username",
									"value": "jordi",
									"description": "Nombre de usuario"
								},
								{
									"key": "password",
									"value": "jordi",
									"description": "Contraseña del usuario"
								},
								{
									"key": "client_id",
									"value": "{{client_id}}",
									"description": "ID del cliente OAuth2"
								},
								{
									"key": "client_secret",
									"value": "{{client_secret}}",
									"description": "Secreto del cliente OAuth2"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/o/token/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"o",
								"token",
								""
							]
						},
						"description": "Obtener token de acceso OAuth2 usando credenciales de usuario"
					},
					"response": []
				},
